@page
@model IndexModel
@{
    ViewData["Title"] = "Uredi profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<body class="backgroundimg">
    <div class="container">
        <h4 style="color:antiquewhite">@ViewData["Title"]</h4style> </h4>
        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label style="color:antiquewhite" asp-for="Input.KratkaBiografija"></label>
                        <input asp-for="Input.KratkaBiografija" class="form-control" />
                        <span  asp-validation-for="Input.KratkaBiografija" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:antiquewhite" asp-for="Input.BrojTelefona"></label>
                        <input asp-for="Input.BrojTelefona" class="form-control" />
                        <span  asp-validation-for="Input.BrojTelefona" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:antiquewhite"> Slika profila</label>
                        <img src="/uploads/@Model.SlikaProfila" class="img-thumbnail" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="file" name="file" />
                    <span style="color:antiquewhite" asp-validation-for="Input.SlikaProfila" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Spremi</button>
            </div>
        </form>
        </div>
    </body>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
